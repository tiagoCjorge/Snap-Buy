<!DOCTYPE html>
<html lang="en">


<!-- molla/product-sidebar.html  22 Nov 2019 10:03:32 GMT -->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Snap Buy</title>
    <meta name="keywords" content="SNAP BUY">
    <meta name="description" content="E-Commerce">
    <meta name="author" content="Tiago Jorge">
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="public/images/logo_pequeno.png">
    <link rel="icon" type="image/png" sizes="32x32" href="public/images/logo_pequeno.png">
    <link rel="icon" type="image/png" sizes="16x16" href="public/images/logo_pequeno.png">
    <link rel="manifest" href="public/images/icons/site.html">
    <link rel="mask-icon" href="public/images/icons/safari-pinned-tab.svg" color="#666666">
    <link rel="shortcut icon" href="public/images/logo_pequeno.png">
    <meta name="apple-mobile-web-app-title" content="Snap Buy">
    <meta name="application-name" content="Snap Buy">
    <meta name="msapplication-TileColor" content="#cc9966">
    <meta name="msapplication-config" content="public/images/icons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" href="public/vendor/line-awesome/line-awesome/line-awesome/css/line-awesome.min.css">
    <!-- Plugins CSS File -->
    <link rel="stylesheet" href="public/css/bootstrap.min.css">
    <link rel="stylesheet" href="public/css/plugins/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="public/css/plugins/magnific-popup/magnific-popup.css">
    <link rel="stylesheet" href="public/css/plugins/jquery.countdown.css">
    <!-- Main CSS File -->
    <link rel="stylesheet" href="public/css/style.css">
    <link rel="stylesheet" href="public/css/skins/skin-demo-13.css">
    <link rel="stylesheet" href="public/css/demos/demo-13.css">
</head>



<body>
    <div class="page-wrapper">
        <header class="header header-10 header-intro-clearance">
         

            <div class="header-middle">
                <div class="container">
                    <div class="header-left">
                        <button class="mobile-menu-toggler">
                            <span class="sr-only">Menu</span>
                            <i class="icon-bars"></i>
                        </button>
                        
                        <a href="/" class="logo">
                            <img src="public/images/demos/demo-13/logo2.png" alt="SnapbBuy Logo" width="105" height="25">
                        </a>
                    </div><!-- End .header-left -->

                    <div class="header-center">
                        
                    </div>

                    <div class="header-right">
                        <div class="header-dropdown-link">
                           
                           
                            <a href="/favoritos" class="wishlist-link">
                                <i class="icon-heart-o"></i>
                                <%if(nrFav>0){%>
                                    <span class="wishlist-count"><%=nrFav%></span>
                                   <%}%>
                                <span class="wishlist-txt">Favoritos</span>
                            </a>
                
                            <div class="dropdown cart-dropdown">
                                <a href="/cart" class="dropdown-toggle" >
                                    <i class="icon-shopping-cart"></i>
                                    <%if(nrProd>0){%>
                                    <span class="cart-count"><%=nrProd%></span>
                                   <%}%>
                                    <span class="cart-txt">Carrinho</span>
                                </a>
                            
                                <a href="/dashboard" class="wishlist-link">
                                      <i class="icon-user"></i>
                                      <span class="wishlist-txt">Conta</span>
                                  </a>
                            </div>
                        </div>

                       


                    </div><!-- End .header-right -->
                </div><!-- End .container -->
            </div><!-- End .header-middle -->

           
        </header><!-- End .header -->

        <main class="main">
            <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
                <div class="container d-flex align-items-center">
                   <!-- deixar espaço em branco antes do conteudo-->
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="product-details-top">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="product">
                                            <figure class="product-media">
                                                <%if (produto[0].desconto>0){%>
                                                    <span class="product-label label-top">-<%=produto[0].desconto%>%</span>
                                                    <%}%>
                                                      
                                               
                                                <img id="product-zoom" src="/public/images/produtos/<%=produto[0].foto%>" alt="product image" style="aspect-ratio: 4/3; width: 100%;">

                                                <div class="product-action-vertical">
                                                    <a href="/favoritos=<%=produto[0].id%>" class="btn-product-icon btn-wishlist btn-expandable"><span>Adicionar aos Favoritos</span></a>
                                                </div><!-- End .product-action-vertical -->
                                            </figure><!-- End .product-main-image -->

                                            
                                        </div><!-- End .product-gallery -->
                                        
                                    </div><!-- End .col-md-6 -->

                                    <div class="col-md-6">
                                        <div class="product-details product-details-sidebar">
                                            <h1 class="product-title"><%=produto[0].nome%></h1><!-- End .product-title -->

                                           <form action="/carrinho" method="POST" id="addCarrinho">
                                            <div class="product-price">
                                                <%if(produto[0].desconto>0){%>
                                                    <span class="new-price"><%=produto[0].preco - produto[0].preco * (produto[0].desconto/100) %>€</span>  
                                                    <span class="old-price" style="text-decoration: line-through;"><%=produto[0].preco%>€</span>
                                                <%}else{%>
                                                    <%=produto[0].preco%> €
                                                <%}%>
                                            </div><!-- End .product-price -->

                                            <div class="product-content">
                                                
                                            </div><!-- End .product-content -->

                                            <div class="details-filter-row details-row-size">
                                               
                                            </div><!-- End .details-filter-row -->

                                           

                                            <div class="product-details-action">
                                                <div class="details-action-col">
                                                    <label for="quantProd">Quant:</label>
                                                    <div class="product-details-quantity">
                                                         <input type="text"  class="form-control" id="quantProd" name="quantProd" value=1 required>
                                                        <input type="text"  id="idProd" name="idProd" value="<%=produto[0].id%>" hidden>
                                                    </div><!-- End .product-details-quantity -->
                                                    
                                                   
                                                   
                                                </div><!-- End .details-action-col -->

                                                <div class="product-action-wrapper" style="display: flex; " >
                                                    <a href="javascript:;"  onclick="document.forms['addCarrinho'].submit()" class="btn-product btn-cart"><span>Adicionar ao Carrinho</span></a>
                                                </div><!-- End .details-action-wrapper -->
                                            </div><!-- End .product-details-action -->
                                        </form>
                                            <div class="product-details-footer details-footer-col">
                                                <div class="product-cat">
                                                    <span>Categoria:</span>
                                                    <a href="/cat=<%=categoria[0].id%>"><%=categoria[0].nome%></a>,
                                                    <a href="/subcat=<%=categoria[1].id%>"><%=categoria[1].nome%></a>,
                                                </div><!-- End .product-cat -->

                                              
                                            </div><!-- End .product-details-footer -->
                                        </div><!-- End .product-details -->
                                    </div><!-- End .col-md-6 -->
                                </div><!-- End .row -->
                            </div><!-- End .product-details-top -->

                            <div class="product-details-tab">
                                <ul class="nav nav-pills justify-content-center" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="product-desc-link" data-toggle="tab" href="#product-desc-tab" role="tab" aria-controls="product-desc-tab" aria-selected="true">Descrição</a>
                                    </li>
                                   

                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="product-desc-tab" role="tabpanel" aria-labelledby="product-desc-link">
                                        <div class="product-desc-content">
                                            <h3>Informação do Produto</h3>
                                            <p> <%=produto[0].descricao%></p>
                                        </div><!-- End .product-desc-content -->
                                    </div><!-- .End .tab-pane -->                                    
                                </div><!-- End .tab-content -->
                            </div><!-- End .product-details-tab -->

                          
                        </div><!-- End .col-lg-9 -->

                        <aside class="col-lg-3">
                            <div class="sidebar sidebar-product">
                                <div class="widget widget-products">
                                    <!--Produtos relacionados-->
                                    <h4 class="widget-title">Produtos relacionados</h4><!-- End .widget-title -->
                                    <%let nProd=0;%>
                                    <%while(nProd<relatedProd.length){%>
                                    <div class="products">
                                        <div class="product product-sm">
                                            <figure class="product-media">
                                                <a href="/produto=<%=relatedProd[nProd].id%>">
                                                    <img src="public/images/produtos/<%=relatedProd[nProd].foto%>" alt="Imagem do Produto" class="product-image">
                                                </a>
                                            </figure>
                                            <div class="product-body">
                                                <h5 class="product-title"><a href="/produto=<%=relatedProd[nProd].id%>"></a><%=relatedProd[nProd].nome%></h5><!-- End .product-title -->
                                                <div class="product-price">
                                                    <span class="product-price"><%=relatedProd[nProd].preco%> €</span>
                                                    <!-- <span class="new-price">$50.00</span>
                                                    <span class="old-price">$110.00</span> -->
                                                </div><!-- End .product-price -->
                                            </div><!-- End .product-body -->
                                        </div><!-- End .product product-sm -->
                                       </div><!-- End products-->
                                       <%nProd+=1}%>
                                    <a href="/subcat=<%=produto[0].subcategoria_id%>" class="btn btn-outline-dark-3"><span>Ver Mais Produtos</span><i class="icon-long-arrow-right"></i></a>
                                </div><!-- End .widget widget-products -->
                            </div><!-- End .sidebar sidebar-product -->
                        </aside><!-- End .col-lg-3 -->
                    </div><!-- End .row -->

                </div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->

        <footer class="footer footer-2">
           

            <div class="footer-middle border-0">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 col-lg-6">
                            <div class="widget widget-about">
                                <!-- Aqui1-->
                                <img src="public/images/demos/demo-13/logo2.png" alt="SnapbBuy Logo" width="200" height="100">

                                <!--Aqui1-->
                                <div class="widget-about-info">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-4">
                                            <span class="widget-about-title">Tem uma duvida?</span>
                                            <a href="tel:+351960208974">+351960208974</a>
                                        </div><!-- End .col-sm-6 -->
                                      
                                    </div><!-- End .row -->
                                </div><!-- End .widget-about-info -->
                            </div><!-- End .widget about-widget -->
                        </div><!-- End .col-sm-12 col-lg-3 -->
                        <!-- Aqui 3-->
                        <div class="col-sm-4 col-lg-2">
                         
                        </div><!-- End .col-sm-64 col-lg-3 -->
                        <div class="col-sm-4 col-lg-2">
                            <div class="widget">
                                <h4 class="widget-title">Informação</h4><!-- End .widget-title -->

                                <ul class="widget-list">
                                    <li><a href="/sobre">Sobre Nós</a></li>
                                    <li><a href="/">Pagina Principal</a></li>
                                    <li><a href="/faq">FAQ</a></li>
                                    <li><a href="/registar">Entrar/Registar</a></li>
                                </ul><!-- End .widget-list -->
                            </div><!-- End .widget -->
                        </div><!-- End .col-sm-4 col-lg-3 -->

                        <div class="col-sm-4 col-lg-2">
                            <div class="widget">
                                <h4 class="widget-title">Apoio ao Cliente</h4><!-- End .widget-title -->

                                <ul class="widget-list">
                                    <li><a href="/faq#faqPagamentos">Metedos de pagamento</a></li>
                                    <li><a href="/faq#faqEncmPergunta3">Politica de devoluções</a></li>
                                    <li><a href="/faq#faqEncmPergunta3">Devoluções</a></li>
                                    <li><a href="/faq#faqEncomendas">Encomendas</a></li>
                                    <li><a href="/faq#faqInfoPergunta3">Taxas</a></li>
                                    <li><a href="/faq#faqEncmPergunta2">Atrasos</a></li>
                                </ul><!-- End .widget-list -->
                            </div><!-- End .widget -->
                        </div><!-- End .col-sm-4 col-lg-3 -->

                        
                    </div><!-- End .row -->
                </div><!-- End .container -->
            </div><!-- End .footer-middle -->
                        <!-- Aqui 3-->

            <div class="footer-bottom">
                <div class="container" style="display:flex;justify-content: center;">
                    <p class="footer-copyright">Copyright © 2024 SnapBuy. Todos os direitos reservados.</p><!-- End .footer-copyright -->
                </div><!-- End .container -->
            </div><!-- End .footer-bottom -->
        </footer><!-- End .footer -->
    </div><!-- End .page-wrapper -->
    <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

    <!-- Mobile Menu -->
    <div class="mobile-menu-overlay"></div><!-- End .mobil-menu-overlay -->

    
    <div class="mobile-menu-container mobile-menu-light">
        <div class="mobile-menu-wrapper">
            <span class="mobile-menu-close"><i class="icon-close"></i></span>
            

            <ul class="nav nav-pills-mobile nav-border-anim" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="mobile-menu-link" data-toggle="tab" href="#mobile-menu-tab" role="tab" aria-controls="mobile-menu-tab" aria-selected="true">Menu</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="mobile-cats-link" data-toggle="tab" href="#mobile-cats-tab" role="tab" aria-controls="mobile-cats-tab" aria-selected="false">Categorias</a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="mobile-menu-tab" role="tabpanel" aria-labelledby="mobile-menu-link">
                    <nav class="mobile-nav">
                        <ul class="mobile-menu">
                            <%if(login == true){%>
                            <li>
                                <a href="#edit-modal" data-toggle="modal" >Junta-te á Snap Buy!</a>

                               
                            </li>
                           <%}%>
                            <li>
                                <a href="/faq">FAQs</a>

                            </li>
                            <li>
                                <a href="/sobre">Sobre Nós</a>

                            </li>
                           
                        </ul><!-- End .menu -->
                    </nav><!-- End .mobile-nav -->
                </div><!-- .End .tab-pane -->
                <div class="tab-pane fade" id="mobile-cats-tab" role="tabpanel" aria-labelledby="mobile-cats-link">
                    <nav class="mobile-cats-nav">
                        <ul class="mobile-cats-menu">
                            <%let i = 0;%>
                            <%let cat = categoria;%>
                            <%while(i<cat.length){%>
                            <li><a class="mobile-cats-lead" href="/cat=<%=cat[i].id%>"><%=cat[i].nome%></a></li>
                            <%i+=1}%>
                        </ul><!-- End .mobile-cats-menu -->
                    </nav><!-- End .mobile-cats-nav -->
                </div><!-- .End .tab-pane -->
            </div><!-- End .tab-content -->

        </div><!-- End .mobile-menu-wrapper -->
    </div><!-- End .mobile-menu-container -->



    <!-- Plugins JS File -->
    <script src="public/js/jquery.min.js"></script>
    <script src="public/js/bootstrap.bundle.min.js"></script>
    <script src="public/js/jquery.hoverIntent.min.js"></script>
    <script src="public/js/jquery.waypoints.min.js"></script>
    <script src="public/js/superfish.min.js"></script>
    <script src="public/js/owl.carousel.min.js"></script>
    <script src="public/js/bootstrap-input-spinner.js"></script>
    <script src="public/js/jquery.magnific-popup.min.js"></script>
    <script src="public/js/jquery.plugin.min.js"></script>
    <script src="public/js/jquery.countdown.min.js"></script>
    
    <!-- Main JS File -->
    <script src="public/js/main.js"></script>
    <script src="public/js/demos/demo-13.js"></script>
</body>


